        {
            "name": "Posts",
            "item": [
                {
                    "name": "Create Post",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "title",
                                    "value": "Test Post",
                                    "type": "text"
                                },
                                {
                                    "key": "content",
                                    "value": "This is a test post content",
                                    "type": "text"
                                },
                                {
                                    "key": "media",
                                    "type": "file",
                                    "src": "/path/to/test/image.jpg"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/posts",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "posts"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "your_jwt_token_here",
            "type": "string"
        }
    ]
